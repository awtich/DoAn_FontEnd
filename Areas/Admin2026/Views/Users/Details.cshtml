@model DoAn_web.Models.User

@{
    ViewBag.Title = "Chi tiết Tài khoản"; // 1. Tiêu đề rõ ràng
    Layout = "~/Areas/Admin2026/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow-sm">

    <div class="card-header">
        <h5 class="mb-0">@ViewBag.Title: @Html.DisplayFor(model => model.Username)</h5>
    </div>

    <div class="card-body">

        <dl class="row">

            <dt class="col-sm-3 col-form-label fw-bold">
                @Html.DisplayNameFor(model => model.Username)
            </dt>
            <dd class="col-sm-9">
                <p class="form-control-plaintext">@Html.DisplayFor(model => model.Username)</p>
            </dd>

            <dt class="col-sm-3 col-form-label fw-bold">
                @Html.DisplayNameFor(model => model.UserRole)
            </dt>
            <dd class="col-sm-9">
                <p class="form-control-plaintext">@Html.DisplayFor(model => model.UserRole)</p>
            </dd>

        </dl>

    </div> <div class="card-footer bg-light">
        @Html.ActionLink("Sửa", "Edit", new { id = Model.Username }, new { @class = "btn btn-warning" })
        @Html.ActionLink("Quay về", "Index", null, new { @class = "btn btn-secondary ms-2" })
    </div>
</div>