@model IEnumerable<DoAn_web.Models.Product>

@{
    // 1. Đặt tiêu đề trang
    ViewBag.Title = "Quản lý Sản phẩm";
    Layout = "~/Areas/Admin2026/Views/Shared/_LayoutAdmin.cshtml";
}

<p class="mb-4">
    @Html.Partial("_SearchBoxPartial") @*thanh tim kiiem*@
    @Html.ActionLink(" Thêm sản phẩm mới", "Create", null, new { @class = "btn btn-primary" })


</p>


<div class="card shadow-sm">
    <div class="card-body">

        <div class="table-responsive">

            <table class="table table-striped table-hover align-middle">

                <thead class="table-dark">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ProductImage)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ProductName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ProductDecription)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ProductPrice)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Category.CategoryName)
                        </th>
                        <th class="text-end" style="width: 200px;">Hành động</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(item.ProductImage))
                                {
                                    <img src="@Url.Content(item.ProductImage)"
                                         alt="@Html.DisplayFor(modelItem => item.ProductName)"
                                         style="width: 75px; height: 75px; object-fit: cover; border-radius: 5px;" />
                                }
                                else
                                {
                                    <span class="text-muted small">Không có ảnh</span>
                                }
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.ProductName)
                            </td>

                            <td>
                                <span class="d-inline-block text-truncate" style="max-width: 200px;">
                                    @Html.DisplayFor(modelItem => item.ProductDecription)
                                </span>
                            </td>

                            <td>
                                @(item.ProductPrice.ToString("N0") + "đ")
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Category.CategoryName)
                            </td>

                            <td class="text-end">
                                @Html.ActionLink("Sửa", "Edit", new { id = item.ProductID }, new { @class = "btn btn-sm btn-warning" })
                                @Html.ActionLink("Chi tiết", "Details", new { id = item.ProductID }, new { @class = "btn btn-sm btn-info ms-1" })
                                @Html.ActionLink("Xóa", "Delete", new { id = item.ProductID }, new { @class = "btn btn-sm btn-danger ms-1" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div> 


