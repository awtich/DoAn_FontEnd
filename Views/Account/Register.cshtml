@model DoAn_web.ViewModels.RegisterViewModel

@{
    ViewBag.Title = "Đăng Ký Tài Khoản";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">

<style>
    /* --- ĐỊNH NGHĨA MÀU MỚI TỪ HÌNH --- */
    :root {
        --custom-dark-blue: #1a1f2b; /* Màu xanh đậm bạn chọn */
    }

    /* Áp dụng màu mới cho các thành phần chữ */
    .text-custom-dark {
        color: var(--custom-dark-blue) !important;
    }

    .card-header h3 {
        color: var(--custom-dark-blue); /* Tiêu đề */
    }

    .form-group label {
        font-weight: 600;
        color: var(--custom-dark-blue); /* Nhãn form */
    }

    .login-link {
        color: var(--custom-dark-blue); /* Link đăng nhập */
        font-weight: bold;
    }

    /* Áp dụng màu mới cho nút */
    .btn-custom-dark {
        background-color: var(--custom-dark-blue);
        border-color: var(--custom-dark-blue);
        color: #ffffff; /* Chữ trắng trên nền tối */
        font-size: 18px;
        font-weight: bold;
        padding: 10px;
    }

        .btn-custom-dark:hover {
            background-color: #2c3344; /* Màu sáng hơn một chút khi di chuột */
            border-color: #2c3344;
            color: #ffffff;
        }

    /* Các tùy chỉnh khác giữ nguyên */
    .card-custom {
        border: 1px solid #e0e0e0;
        border-radius: 8px;
    }

    .form-control {
        height: 45px;
        font-size: 15px;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">

            <div class="card card-custom shadow-sm">

                <div class="card-header bg-white border-bottom-0 pb-0">
                    <h3 class="text-center font-weight-bold mt-3 mb-3">ĐĂNG KÝ TÀI KHOẢN</h3>
                    <hr>
                </div>

                <div class="card-body px-4 pb-4">
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <strong>Thông báo:</strong> Vui lòng kiểm tra lại thông tin.
                                @Html.ValidationSummary(false, "", new { @class = "small mb-0 pl-3" })
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        }

                        <div class="form-group">
                            @Html.LabelFor(m => m.Username)
                            @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Nhập tên đăng nhập..." })
                            @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger small" })
                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-6">
                                @Html.LabelFor(m => m.Password)
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Mật khẩu" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger small" })
                            </div>
                            <div class="form-group col-md-6">
                                @Html.LabelFor(m => m.ConfirmPassword)
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Nhập lại mật khẩu" })
                                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger small" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.CustomerName)
                            @Html.TextBoxFor(m => m.CustomerName, new { @class = "form-control", placeholder = "Họ và tên của bạn" })
                            @Html.ValidationMessageFor(m => m.CustomerName, "", new { @class = "text-danger small" })
                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-6">
                                @Html.LabelFor(m => m.CustomerPhone)
                                @Html.TextBoxFor(m => m.CustomerPhone, new { @class = "form-control", placeholder = "Số điện thoại" })
                                @Html.ValidationMessageFor(m => m.CustomerPhone, "", new { @class = "text-danger small" })
                            </div>
                            <div class="form-group col-md-6">
                                @Html.LabelFor(m => m.CustomerEmail)
                                @Html.TextBoxFor(m => m.CustomerEmail, new { @class = "form-control", placeholder = "Email liên hệ" })
                                @Html.ValidationMessageFor(m => m.CustomerEmail, "", new { @class = "text-danger small" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.CustomerAddress)
                            @Html.TextAreaFor(m => m.CustomerAddress, new { @class = "form-control", rows = "2", placeholder = "Địa chỉ nhận hàng" })
                            @Html.ValidationMessageFor(m => m.CustomerAddress, "", new { @class = "text-danger small" })
                        </div>

                        <button type="submit" class="btn btn-custom-dark btn-block mt-4">
                            ĐĂNG KÝ NGAY
                        </button>

                        <div class="text-center mt-3">
                            <span class="text-muted">Bạn đã có tài khoản?</span>
                            <a href="@Url.Action("Login", "Account")" class="login-link ml-1">Đăng nhập tại đây</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>